@using UnivarsityManagemantSystem.Models
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    List<Designation> designations = ViewBag.Designations;
    List<Department> departments = ViewBag.Departments;
}

<h4><i class="icon-plus-sign">Add Teacher</i></h4>
<!DOCTYPE html>
@section style
    {
    <style>
        label.error {
            color: red;
            font-style: italic;
            display: inline;
        }
    </style>

}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <style>
       
    </style>
</head>
<body>
    <div>
        <form method="POST" id="saveTeacherForm">
            <table>
                <tr>
                    <td><label for="Name">Name : </label></td>
                    <td><input type="text" id="Name" name="TeacherName" /></td>
                </tr>
                
                <tr>
                    <td><label for="Address">Address : </label></td>
                    <td>
                        <textarea rows="4" cols="40" id="Address" name="Address"></textarea>
                    </td>
                </tr>
                <tr>
                    <td><label for="Email">Email : </label></td>
                    <td><input type="text" id="Email" name="Email" /></td>
                </tr>
                <tr>
                    <td><label for="ContactNo">ContactNo : </label></td>
                    <td><input type="text" id="ContactNo" name="ContactNo" /></td>
                </tr>

                
                <tr>
                    <td><label for="">Designation : </label></td>
                    <td>
                        <select id="DesignationId" name="DesignationId">
                            <option value="">- - - - - - - - - Select - - - - - - - - -</option>
                            @foreach (Designation designation in designations)
                            {
                                <option value="@designation.DesiId">@designation.DesiName</option>

                            }
                        </select>

                    </td>

                </tr>
                <tr>
                    <td><label for="">Department : </label></td>
                    <td>
                        <select id="DepartmentId" name="DepartmentId">
                            <option value="">- - - - - - - - - Select - - - - - - - - -</option>
                            @foreach (Department department in departments)
                            {
                                <option value="@department.DeptId">@department.DeptName</option>

                            }
                        </select>

                    </td>

                </tr>
                <tr>
                    <td><label for="Cradit">Credit To Be Taken : </label></td>
                    <td><input type="text" id="Cradit" name="CraditTaken" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" class="btn btn-success" value="Create" /></td>

                </tr>
                <tr>
                    <td></td>
                    <td><h4>@ViewBag.Message</h4></td>
                </tr>
            </table>
        </form>
    </div>
    @section scripts{
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script>
        $("#saveTeacherForm").validate({
            rules: {
                TeacherName: "required",
                Address: {
                    required: true,
                    maxlength: 250,
                    minlength: 5
                },              
                Email: {
                    required: true,
                    email: true
                },
                ContactNo: "required",
                DesignationId:"required",
                DepartmentId: "required",
                
                CraditTaken: {
                    required: true,
                    min: 1
                }

            },
            messages: {
                TeacherName: "Please enter student name",
                Address: {
                    required: "Please enter the address",
                    maxlength: "Address must consist of at most 250 characters",
                    minlength: "Address must consist of at least 5 characters"
                },              
                Email: {
                    required: "Please enter email address",
                    email: "Please enter a valid email address"
                },
                ContactNo: "Please enter phone no",
                DesignationId: "Please select teacher designation",
               
                DepartmentId: "Please select the department",
                
                CraditTaken: {
                    required: "Please input a integer number",
                    min: "Please enter Positive value"
                },

            }
        });

    </script>

        
    }
</body>
</html>



